  "_instructions": {
    "usage": "This file tracks all features/tasks for the project",
    "rules": [
      "ONLY modify the 'passes' field when a feature is verified complete",
      "NEVER remove or edit feature descriptions",
      "NEVER modify test steps",
      "NEVER reorder features",
      "Add new features at the end of the list",
      "Always verify with testing before marking passes: true"
    ],
    "tdd_enforcement": {
      "BLOCKING": "⚠️ DO NOT write implementation code until test_file exists and test_fails_before is true",
      "workflow": [
        "1. Create test file in tests/{feature}.spec.ts",
        "2. Run test - verify it FAILS (set test_fails_before: true)",
        "3. ONLY THEN write implementation code",
        "4. Run test - verify it PASSES (set test_passes_after: true)",
        "5. Set passes: true"
      ],
      "violation": "Setting passes:true without test_passes_after:true is a TDD violation"
    },
    "categories": {
      "setup": "Project initialization and configuration",
      "functional": "Core functionality features",
      "style": "UI/UX and visual requirements",
      "integration": "External service integrations",
      "testing": "Test coverage requirements"
    },
    "priority_levels": {
      "critical": "Must have - core functionality",
      "high": "Should have - important features",
      "medium": "Nice to have - enhancements",
      "low": "Optional - future considerations"
